<% include partials/header %>
    <% if(errors != undefined){ %>
        <ul>
        <% errors.forEach(function(error){ %>
            <li><%= error.msg %></li>
        <%}) %>
        </ul>
    <%} %>
    <form method="POST" action= <%="/stories/edit/"+id%>>

        <label>Story Title </label><br>
        <input type="text" name="story_title" value= <%=savedStory.story_title%>><br>

        <label>User Story </label><br>
        <textarea type="text" name="story_desc"><%=savedStory.story_description %></textarea><br>

        <label>Acceptance Criteria </label><br>
        <textarea type="text" name="acceptance_criteria"><%=savedStory.acceptance_criteria %></textarea><br>

        <label>Business Value </label><br>
        <input type="number" name="business_value" value=<%=savedStory.business_value%>><br>

        <label>Estimation </label><br>
        <input type="number" step="0.5" name="estimation" value=<%=savedStory.estimation%>><br><br>
        <select class="selectpicker" data-style="btn-info" name="selectpicker">
            <option value="Current"><%= "Current:  " + savedStory.status%></option>
            <option value="Planning">Planning</option>
            <option value="To Do">To do</option>
            <option value="In Progress">In progress</option>
            <option value="Review">Review</option>
            <option value="Done">Done</option>
        </select><br><br>
        <input type="submit" value="Edit story">
    </form>
<% include partials/footer%>